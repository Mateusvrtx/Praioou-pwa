<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="imagex/png" href="/ambulante/CadPlanos/assets/img/iconWeb.svg">
    <title>Planos</title>
    <link rel="stylesheet" href="/ambulante/CadPlanos/assets/style.css">
</head>
<body>

    <div class="blur"></div>
    <img src="/ambulante/CadBarraqueiro/assets/img/logo.png" class="logo">

    <div class="container">
        <div class="titulos">
            <div class="titu">
                <p class="titulo"> Escolha seu Plano</p>
            </div>
            <p class="subtitulo">Escolha o plano que mais combina com você</p>
        </div>

        <div class="planos">
        <div class="maresia" onclick="openModal('Maresia', '/ambulante/CadPlanos/assets/img/guardaSol.png', 'Carrinhos Ilimitados,Reservas automaticas,Comandas digitais e automatizadas,Atendimento ao cliente 24hrs', '14,99', '84,99', '152,99')">
            <img class="imgPlano" src="/ambulante/CadPlanos/assets/img/guardaSol.png" alt="">
            <p class="nomePlano">Maresia</p>
        </div>
        <div class="AguaDeCoco" onclick="openModal('Água de Coco', '/ambulante/CadPlanos/assets/img/coco.png', 'Carrinhos Ilimitados, Estatisticas a cada 3 e 6 meses, Comandas digitais e automatizadas, Reservas automaticas, Direito a um clube, Atendimento ao cliente 24hrs', '24,99', '144,99', '294,99')">
            <img class="imgPlano" src="/ambulante/CadPlanos/assets/img/coco.png" alt="">
            <p class="nomePlano">Água de Coco</p>
        </div>
        <div class="peNaAreia" onclick="openModal('Pé na Areia', '/ambulante/CadPlanos/assets/img/chinelo.png', 'Carrinhos Ilimitados, Todas as estatisticas disponiveis, Comandas e Reservas digitais e automatizadas, Clubes ilimitados, Seu perfil no topo das pesquisas', '49,99', '289,99', '499,99')">
            <img class="imgPlano" src="/ambulante/CadPlanos/assets/img/chinelo.png" alt="">
            <p class="nomePlano">Pé na Areia</p>
        </div>
    </div>

    <div class="modalPlano" id="modalPlano">
        <div class="tituloModal">
            <p id="modalTitle">Maresia</p>
            <img id="modalImage" src="/ambulante/CadPlanos/assets/img/guardaSol.png" width="30px" alt="">
        </div>

        <div class="container-vantagens">
            <ul class="vantagens" id="modalVantagens">
                <li>Carrinhos Ilimitados</li>
                <li>Reservas automaticas</li>
                <li>Comandas digitais e automatizadas</li>
                <li>Atendimento ao cliente 24hrs</li>
            </ul>
        </div>

        <div class="tempoPlano">
            <div class="mensal">
                <input type="radio" name="plano" id="mensal" value="14,99">
                <p>Mensal</p>
            </div>
            <div class="semestral">
                <input type="radio" name="plano" id="semestral" value="84,99">
                <p>Semestral</p>
            </div>
            <div class="anual">
                <input type="radio" name="plano" id="anual" value="152,99">
                <p>Anual</p>
            </div>
        </div>
        <div class="assinar">
            <button id="botao-preco" class="btn-assinar">Assinar R$ 14,99</button>
        </div>
    </div>
            <script>
                // Seleciona todos os inputs de radio com name="plano"
                const radios = document.querySelectorAll('input[name="plano"]');
                // Seleciona o botão
                const button = document.getElementById('botao-preco');
        
                // Adiciona um evento de mudança para cada radio button
                radios.forEach(radio => {
                    radio.addEventListener('change', function() {
                        // Atualiza o valor do botão com o valor do radio button selecionado
                        button.innerText = `Assinar R$ ${this.value}`;
                    });
                });
            </script>

<script>
    function openModal(titulo, imagem, vantagens, precoMensal, precoSemestral, precoAnual) {
        // Atualiza o título e a imagem do modal
        document.getElementById('modalTitle').innerText = titulo;
        document.getElementById('modalImage').src = imagem;

        // Atualiza as vantagens
        const vantagensList = document.getElementById('modalVantagens');
        vantagensList.innerHTML = ''; // Limpa as vantagens anteriores

        vantagens.split(',').forEach(vantagem => {
            const li = document.createElement('li');
            li.innerText = vantagem;
            vantagensList.appendChild(li);
        });

        // Atualiza os valores dos radio buttons
        document.getElementById('mensal').value = precoMensal;
        document.getElementById('semestral').value = precoSemestral;
        document.getElementById('anual').value = precoAnual;

        // Atualiza o texto do botão com o preço mensal por padrão
        document.getElementById('botao-preco').innerText = `Assinar R$ ${precoMensal}`;

        // Mostra o modal
        document.getElementById('modalPlano').style.display = 'block';
    }

    // Adicione um evento para os radio buttons para atualizar o valor do botão
    const radioss = document.querySelectorAll('input[name="plano"]');
    const buttonn = document.getElementById('botao-preco');

    radioss.forEach(radio => {
        radio.addEventListener('change', function() {
            buttonn.innerText = `Assinar R$ ${this.value}`;
        });
    });
</script>

            <div class="termos">
                <h4 class="check"><input type="checkbox"> <label>Li e concordo com os Termos do Contrato do plano Maresia.</label></h4> 
            </div>

            <div class="btn-teste">
                <a href="/"><button class="btn-compra">Fazer teste grátis</button></a>
            </div>
    </div>
</div>
</body>
</html>