<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="imagex/png" href="/banhista/reserva/assets/img/iconWeb.svg">
    <link rel="stylesheet" href="/banhista/reserva/assets/style.css" >
    <script src="/banhista/reserva/assets/script.js" defer></script>
    <link rel="stylesheet" href="/banhista/padrao/style.css">
    <title>Carrinho</title>
</head>

<body>

    <header class="navSup">
        <a onclick="window.history.back()"><img src="/banhista/padrao/img/voltar.svg" id="voltar"></a>
    </header>

    <img src="/banhista/padrao/img/logo.svg" class="logo">

<div class="corpo">
        <nav class="navbar">
            <a href="/inicial" class="active" id="NavInicio"><img src="/banhista/cardapio/assets/img/HomeClick.png" >Inicio</a>
            <a href="#" class="active" id="NavReserva"> <img src="/banhista/cardapio/assets/img/Reserva.png" alt="">Reserva</a>
            <a href="/Sacola" class="active" id="NavPedido"> <img src="/banhista/cardapio/assets/img/Pedido.png" alt="">Sacola</a>
            <a href="/perfil" class="active" id="NavPerfil"> <img src="/banhista/cardapio/assets/img/Perfil.png" alt="">Perfil</a>
          </nav>
    </div>

    <section class="imagem">
        <div class="barraca">
            <img src="/uploads/<%= primeiraFoto %>" alt="">
        </div>
        <div class="selo">
            <a href="/clubeInicial"><img src="/banhista/reserva/assets/img/coroa.png" alt=""></a>
        </div>
    </section>

    <aside class="line">
        <div class="reserva">
            <h2><%= carrinho.nm_carrinho %></h2>
            <a href="/reservando/<%= IDcarrinho %>"><button class="hora">Reservar</button></a>
        </div>
        <div class="info">
            <div class="valor">
                <h3>R$ 45,00</h3>
                <h5>Por 4 Cadeiras</h5>
            </div>
            <div class="border">
            <img id='imagem' onclick='trocarImagem()' src="/banhista/reserva/assets/img/coracao.svg" alt=""></div>
        </div>
    </aside>

    <section class="descri">
        <h3><%= carrinho.ds_localizacao %></h3>

        <div class="btns">
            <a href="/cardapio/<%= IDcarrinho %>"><button>Cardápio</button></a>
            <button id="btnClube" class="clube-btn" value="<%= clube %>" >Clube</button>
        </div>
    </section>

    <section class="Segestão">
        <h4 class="sugtext">Talvez você possa gostar</h4>
        <div class="suges">
            <div class="card">
                <img src="/banhista/reserva/assets/img/Barraca1.png" alt="">
                <h3>Barraca da Mila</h3>
            </div>

            <div class="card">
                <img src="/banhista/reserva/assets/img/Barraca2.png" alt="">
                <h3>Barraca do Digão</h3>
            </div>

            <div class="card">
                <img src="/banhista/reserva/assets/img/Barraca3.png" alt="">
                <h3>PrAiEiRos Beach</h3>
            </div>
        </div>
    </section>

    <div class="appa">
        <div class="rating1">
            <div class="rating_average">
                <div class="testing">
                <h1>4.5</h1>
                <p>290,291</p></div>
                <div class="star-outer">
                    <div class="star-inner"></div>
                </div>
                
            </div>

            <div class="rating_progress">
                
                </div>
            </div>
    </div>

    <div class="body-coment">
        <button id="add-comentario" class="add">Adicionar comentário</button>
    </div>

    <div id="modal" class="modal">
        <div class="modal-corpo">
            <form class="teste" action="/comentarios/adicionar" method="post">
                <span class="fechar">&times;</span>
                <div class="o">
                    <div class="perfil">
                        <img class="cliente-img" src="/uploads/<%= comentarios.foto %>">
                        <label for="" class="nome"><%= comentarios.nome %> <%= comentarios.sobreN %></label>
                    </div>
                    <div class="app">
                        <div class="ratingg">
                            <div class="rating_averagee">
                                <div class="star-outer">
                                    <span class="star" data-value="1.0">★</span>
                                    <span class="star" data-value="2.0">★</span>
                                    <span class="star" data-value="3.0">★</span>
                                    <span class="star" data-value="4.0">★</span>
                                    <span class="star" data-value="5.0">★</span>
                                </div>
                                <div class="testing">
                                    <h1 id="average-rating">0.0</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <textarea class="digit" name="texto" rows="4" placeholder="Digite seu comentário..." style="border-radius: 1.5vw;"></textarea>
                <input type="hidden" name="estrelas" id="estrelas" value="0">
                <div class="enviar">
                    <div class="anonimo">
                        <input type="checkbox" name="anonimo" id="anonimo">
                        <label for="anonimo">Enviar anonimamente</label>
                    </div>
                    <button class="btn" type="submit">Enviar Comentário</button>
                </div>
                
                <input type="hidden" name="idCarrinho" value="<%= carrinho.cd_carrinho %>">
            </form>
        </div>
    </div>        
    <section id="comentarios">
        <div class="comentario">
            <% comentarios.forEach(comentario => { %>
                <div class="estrutura">
                    <div class="comentDatelhes">
                        <div class="cliente">
                            <img class="cliente-img" src="/uploads/<%= comentario.foto %>" alt="Foto de <%= comentario.nome %>">
                            <div class="estrelaa">
                                <h3><%= comentario.nome %> <%= comentario.sobrenome %></h3>
                                <h4><%= new Date(comentario.data).toLocaleDateString('pt-BR') %></h4> 
                            </div>           
                        </div>
                        <div class="estrela"> 
                            <%= comentario.estrelas %>
                            <% for (let i = 0; i < comentario.estrelas; i++) { %>
                                <img class="estrela2" src="/banhista/reserva/assets/img/estrela.png" width="15vw">
                            <% } %>
                        </div> 
                    </div>
    
                    <div class="coment">
                        <p><%= comentario.comentario %></p>
                    </div>
                    
                    <div class="reacoes">
                            <div class="like-deslike">
                                <button id="like"> <img src="/banhista/reserva/assets/img/like.svg" alt="Gostei"> <%= comentario.like %></button>
                                <button id="deslike"> <img src="/banhista/reserva/assets/img/deslike.svg" alt="Não gostei"> <%= comentario.deslike %></button>
                            </div>
                            <button class="responder-btn" data-comentario-id="<%= comentario.id %>" data-carrinho-id="<%= carrinho.cd_carrinho %>">Responder</button>   
                    </div>
    
                    <div id="responder-modal" class="modal" style="display: none;">
                        <div class="modal-content">
                            <span class="fechar">&times;</span>
                            <h2>Responder Comentário</h2>
                            <form class="resposta-form" action="/comentarios/responder" method="post">
                                <textarea name="texto" rows="2" placeholder="Digite sua resposta..."></textarea>
                                <input type="hidden" name="avali" id="avali" value="">
                                <input type="hidden" name="idCarrinho" id="idCarrinho" value="">
                                <button type="submit">Enviar Resposta</button>
                            </form>
                        </div>
                    </div>

                </div>
            <% }); %>
        </div>
    </section>

    <footer style="padding: 8vw;"></footer>
</body>
</html>